    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
try{
    String a= t1.getText();
    String b= t2.getText();
    String c= t3.getText();
    Class.forName("com.mysql.jdbc.Driver");
    Connection con=DriverManager.getConnection("jdbc:mysql://localhost:3306/teacher1","root","seedit");
    Statement htmt=con.createStatement();
    String q="insert into addct value('"+a+"','"+b+"','"+c+"')";
    int rs=htmt.executeUpdate(q);
    System.out.println("Save");
    con.close();
// TODO add your handling code here:
